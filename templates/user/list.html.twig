{% extends 'base.html.twig' %}

{% block stylesheets %}
  
    <link rel="stylesheet" href="{{ asset('css/list.css') }}">
{% endblock %}

{% block body %}
    <div class="carte">
        {% for user in users %}
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single_advisor_profile wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                    <div class="advisor_thumb">
                        {% if user.getPhotoProfil() is not empty %}
                            <img src="{{ asset('profile/' ~ user.getPhotoProfil()) }}" alt="{{ user.nom }} Photo">
                        {% else %}
                            <img src="{{ asset('defaut/default.png') }}" alt="Default Photo">
                        {% endif %}
                        <div class="social-info">
                           <p>{{user.bio}}</p>
                        </div>
                    </div>
                    <div class="single_advisor_details_info">
                        <h6>{{ user.nom }}</h6>
                        <a class="btn btn-primary" href="{{ path('user_profil', { 'user': user.id }) }}">go</a>
                    </div>
                </div>
                </div>
            </div>
            {% if loop.index % 3 == 0 %}</div><div class="carte">{% endif %}
        {% endfor %}
    </div>
{% endblock %}
