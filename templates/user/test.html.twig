{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/cat.css') }}">
{% endblock %}

{% block body %}
	<main>
		<div class="tab-content" id="myTabContent">
			{% for competence in competences %}
				<div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="competence-{{ competence.id }}" role="tabpanel" aria-labelledby="competence-{{ competence.id }}-tab">
					<div class="row justify-content-sm-center">
						{% for user in competence.users %}
							<div class="col-sm-4">
								<div class="card" style="width: 18rem;">
                                {# <div class="card-body"> #}
									<div class="single_advisor_profile wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
										<div class="advisor_thumb">
											{% if user.getPhotoProfil() is not empty %}
												<img src="{{ asset('profile/' ~ user.getPhotoProfil()) }}" alt="{{ user.nom }} Photo">
											{% else %}
												<img src="{{ asset('defaut/default.png') }}" alt="Default Photo">
											{% endif %}
											<div class="social-info">
												<p>{{user.prenom}}</p>
											</div>
										</div>

										<div class="single_advisor_details_info">
											<h6>{{ user.bio }}</h6>
											<h5>{{ user.salaire}}  € </h5>
											<a class="btn btn-primary" href="{{ path('user_profil', { 'user': user.id }) }}">go</a>
										</div>
									</div>
								{# </div> #}
								</div>
							</div>
							<!-- Ajoutez d'autres cartes pour chaque compétence de cet utilisateur -->
						{% endfor %}

					</div>
				</div>

			{% endfor %}
		</div>

	</main>

	<footer>
		<div>
			<p>&copy; 2023 Mon Site Web</p>
		</div>
	</footer>

{% endblock %}
