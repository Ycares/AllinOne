{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'utilisateur</h1>
        <hr>

        <div class="row">
            <div class="col-md-3">
                <div>
                    {% if user.getPhotoProfil() is not empty %}
                        <img src="{{ asset('profile/' ~ user.getPhotoProfil()) }}" alt="{{ user.nom }} Photo" class="img-fluid rounded-circle" style="max-width: 200px;">
                    {% else %}
                        <img src="{{ asset('defaut/default.png') }}" alt="Default Photo" class="img-fluid rounded-circle" style="max-width: 200px;">
                    {% endif %}
                </div>
            </div>
            <div class="col-md-9">
                <p><strong>Nom :</strong> {{ user.nom }}</p>
                <p><strong>Prénom :</strong> {{ user.prenom }}</p>
                <p><strong>Email :</strong> {{ user.email }}</p>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <h2>Compétences :</h2>
                <ul class="list-group badge badge-soft-secondary p-2">
                    {% for competence in competences %}
                        <li class="list-group-item ">{{ competence.competence }} </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
             
                {% if user.getCv() is not empty %}
                  <h2>CV :</h2>
                    <iframe src="{{ asset('cv/' ~ user.getCv()) }}" class="w-100" style="height: 600px; border: none;"></iframe>
                {% else %}
                    <p>Aucun CV disponible pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    {% if user.getPhotoProfil() is not empty %}
                        <img src="{{ asset('profile/' ~ user.getPhotoProfil()) }}" alt="{{ user.nom }} Photo" class="img-fluid rounded-circle" style="max-width: 200px;">
                    {% else %}
                        <img src="{{ asset('defaut/default.png') }}" alt="Default Photo" class="img-fluid rounded-circle" style="max-width: 200px;">
                    {% endif %}
                    <div class="mt-3">
                      <h4>{{ user.nom|upper }} {{user.prenom}}</h4>
                      <p class="text-secondary mb-1">Full Stack Developer</p>
                      <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                      <a class="btn btn-outline-primary" href="{{ path('service_contact') }}">Message</a>
                    </div>
                  </div>
                </div>
              </div>
