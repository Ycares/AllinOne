{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}

	<form method="post">
	{{ form_start(contactForm) }}

	<div class="container">
		<div class=" text-center mt-5 ">

			<h1>Contact</h1>
		</div>

	<div class="row ">
		<div class="col-lg-7 mx-auto">
			<div class="card mt-2 mx-auto p-4 bg-light">
				<div class="card-body bg-light">

					<div class="container">
					 <div class="controls">

					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
							  {{ form_row(contactForm.nom, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								{{ form_row(contactForm.prenom, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								{{ form_row(contactForm.email, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					<div class="col-md-6">
						<div class="form-group">
							{{ form_row(contactForm.sujet, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				   </div>
					<div class="row">
					    <div class="col-md-12">
							<div class="form-group">
								{{ form_row(contactForm.message, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="col-md-12">
							<input type="submit" class="btn btn-success btn-send  pt-2 btn-block" value="Envoyer">
						</div>
					</div>
				</div>		
			</div>
			</div>
		</div>
	</div>

    </div>
	</div>
	{{ form_end(contactForm) }}
	</form>

{% endblock %}
